<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="name.lizhe.lira.module.comments.dao.mapper.CommentsMapper" >

	<resultMap id="IssueHistoryBeanMap" type="name.lizhe.lira.module.history.bean.IssueHistoryBean">
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="issue_id" property="issue_id" jdbcType="INTEGER" />
		<result column="operator" property="operator" jdbcType="VARCHAR" />
		<result column="action" property="action" jdbcType="VARCHAR" />
	</resultMap>

	<select id="getIssueHistories"  resultMap="IssueHistoryBeanMap">
	<![CDATA[
		select h.id,h.issue_id,u.name as operator,h.action from Histories as h join Users u on h.operator=u.id where issue_id=#{issue_id}
	]]>
	</select>
	
	
	
</mapper>